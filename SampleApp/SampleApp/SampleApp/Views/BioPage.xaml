<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleApp.Views.BioPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="What type of passenger are you?" />
            <Frame HeightRequest="400">
                <Editor x:Name="bioEditor" VerticalOptions="Fill"></Editor>
            </Frame>
            
            <Button StyleClass="updateButton" Clicked="OnUpdateButtonClicked" Text="Update"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>