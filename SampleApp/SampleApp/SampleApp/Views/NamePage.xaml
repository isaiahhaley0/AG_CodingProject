<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Name Page"
             x:Class="SampleApp.Views.NamePage"
             >
    <ContentPage.Content>
        <StackLayout>
            <Label StyleClass="prompt" Text="What's Your Name?"></Label>
            <Grid RowDefinitions="Auto" ColumnDefinitions="*, *">
                <Entry x:DataType="x:String" x:Name="fName" Placeholder="First Name" HorizontalTextAlignment="Center" Grid.Column="0"></Entry>
                <Entry x:Name="lName" Placeholder="Last Name" HorizontalTextAlignment="Center" Grid.Column="1"></Entry>
                
            </Grid>
            <Button StyleClass="updateButton" Text="Update" Clicked="OnButtonCliked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>