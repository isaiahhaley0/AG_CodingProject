<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleApp.Views.PhonePage">
    <ContentPage.Content>
        <StackLayout>
            <Label StyleClass="prompt" Text="What's your phone number?"/>
            <Entry x:Name="PhoneEditor" Keyboard="Telephone" MaxLength="10"></Entry>
            <Button StyleClass="updateButton" Text="Update" Clicked="OnUpdateButtonClicked" ></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>