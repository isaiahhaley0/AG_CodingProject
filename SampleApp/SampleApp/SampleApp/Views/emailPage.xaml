<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleApp.Views.emailPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="What's Your Email?"/>
            <Frame>
                <Entry x:Name="email" Placeholder="Timcook@icloud.com"></Entry>
            </Frame>
            <Button Text="Update" Clicked="OnUpdateButtonClicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>